{
    "name": "kundanbora/kundankb-portfolio-theme",
    "type": "wordpress-theme",
    "description": "This is my custom WordPress theme for my portfolio website at kundankb.com, showcasing my skills and projects.",
    "keywords": [
        "WordPress",
        "Themes",
        "Portfolio",
        "TailwindCSS"
    ],
    "homepage": "https://kundankb.com",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Kundan Bora",
            "homepage": "https://kundankb.com"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.0",
        "wptrt/wpthemereview": "^0.2.1",
        "php-parallel-lint/php-parallel-lint": "^1.2.0",
        "wp-cli/i18n-command": "^2.2.5"
    },
    "scripts": {
        "lint:wpcs": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs",
        "lint:php": "@php ./vendor/bin/parallel-lint --exclude .git --exclude vendor .",
        "make-pot": "wp i18n make-pot . languages/kundankb-portfolio-theme.pot"
    },
    "support": {
        "issues": "https://github.com/kundan333/portfolio/issues",
        "source": "https://github.com/kundan333/portfolio"
    }
}
